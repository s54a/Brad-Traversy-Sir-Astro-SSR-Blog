---
const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---

<div class="mt-10 flex justify-between">
  <a
    href={"/articles?page=" + (currentPage - 1)}
    class={disablePrevious
      ? "inline-block rounded-lg bg-indigo-100 px-3 py-2 text-gray-400 pointer-events-none"
      : "inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"}
  >
    Previous
  </a>
  <a
    href={"/articles?page=" + (currentPage + 1)}
    class={disableNext
      ? "inline-block rounded-lg bg-indigo-100 px-3 py-2 text-gray-400 pointer-events-none"
      : "inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"}
  >
    Next
  </a>
</div>
