---
const { currentPage, totalPages } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
}
---

<div class="mt-10 flex justify-between">
  <a
    href={"/articles?page=" + (currentPage - 1)}
    class="inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"
  >
    Previous
  </a>
  <a
    href={"/articles?page=" + (currentPage + 1)}
    class="inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"
  >
    Next
  </a>
</div>
